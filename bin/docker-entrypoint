#!/bin/bash

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
# Check if any argument contains "rails" and "server"
if echo "${@}" | grep -q "rails" && echo "${@}" | grep -q "server"; then
  echo "Preparing database..."
  ./bin/rails db:prepare || echo "Database preparation completed (or skipped)"
fi

# Execute the command (Rails server should keep running)
exec "${@}"
